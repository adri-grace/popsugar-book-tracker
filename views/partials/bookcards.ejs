<div class="row d-flex justify-content-between">
<% user.book.forEach(function(b){ %>

    <div class="card pa-3">
        <div class="card-body">
            <h5 class="card-title">
                Title: <%= b.title %>
            </h5>
            <h6>Author: <%= b.author %></h6>
            <p>Category: <%= b%></p>
            <div class="card-text">
              <%  b.reviews.forEach(function(r) { %>
                    <p>Rating: <%= r.rating %></p>
                    <p>Review: <%= r.content %></p>
              <%  }); %>
                
            </div>
        </div>
    </div>
<% }); %>
</div>